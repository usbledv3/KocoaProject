<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GamefirstFragment" >

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:text="문제"
        android:textColor="#0618C1"
        android:textSize="34sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="보기"
        android:textColor="#0618C1"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/quizQuestion" />

    <EditText
        android:id="@+id/quizQuestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="문제 내용"
        android:inputType="textPersonName"
        app:layout_constraintStart_toEndOf="@+id/textView5"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1번"
                android:textColor="#000000"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/case1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="1번 내용"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="2번"
                android:textColor="#000000"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/case2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:hint="2번 내용"
                android:inputType="textPersonName" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="3번"
                android:textColor="#000000"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/case3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="3번 내용"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="4번"
                android:textColor="#000000"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/case4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="4번 내용"
                android:inputType="textPersonName" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="정답"
            android:textColor="#0618C1"
            android:textSize="34sp" />

        <RadioGroup
            android:id="@+id/RadioGp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radiocase1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1번"
                android:textColor="#ff9050" />

            <RadioButton
                android:id="@+id/radiocase2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2번"
                android:textColor="#ff9050" />

            <RadioButton
                android:id="@+id/radiocase3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3번"
                android:textColor="#ff9050" />

            <RadioButton
                android:id="@+id/radiocase4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4번"
                android:textColor="#ff9050" />
        </RadioGroup>

    </LinearLayout>

    <Button
        android:id="@+id/makequizbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="#6495ED"
        android:text="문제 생성"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3" />

</androidx.constraintlayout.widget.ConstraintLayout>