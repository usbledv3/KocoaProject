<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/chungcheongListName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="90dp"
                android:text="2022 서울 빛초롱축제"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/chungcheongImageView"
                android:layout_width="wrap_content"
                android:layout_height="260dp"
                app:srcCompat="@drawable/festival1" />

            <TextView
                android:id="@+id/chungcheongListDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="110dp"
                android:text="기간 : 2022.12.16 - 12.31" />

            <TextView
                android:id="@+id/chungcheongListPlace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="135dp"
                android:text="장소 : 서울 청계천" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>